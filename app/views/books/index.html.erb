<p id="notice"></p>
<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
      <%= attachment_image_tag @user, :profile_image, :fill, 50, 50, format: 'jpeg', fallback: "no_image.jpg" %>

      <table class="table">
        <tbody>
          <tr>
          	<th>name</th>
          	<th><%= current_user.name %></th>
          </tr>
          <tr>
          	<th>introduction</th>
          	<th><%= current_user.introduction %></th>
          </tr>
        </tbody>
      </table>

      <div class="row">
      <% if @user == current_user.id %>
        <p><%= link_to "edit", edit_user_path(@user), class: "btn btn-outline-secondary btn-block fas fa-user-cog" %></p>
      <% end %>
      </div>

      <h2 class="mt-3">New book</h2>
      <%= form_with model: @book, url:'/books', local:true do |f| %>
        <div class="form-group">
          <h4>Title</h4>
          <%= f.text_field :title %>
        </div>
        <div class="form-group">
          <h4>Opinion</h4>
          <%= f.text_area :opinion %>
        </div>

        <div class="form-group">
          <%= f.submit 'Create Book', class: "btn btn-success" %>
        </div>
      <% end %>
      </form>
    </div>
    <div class="col-md-8 offset-md-1">
       <h2>Books</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
        </tbody>
      </table>
    </div>
  </div>
</div>
